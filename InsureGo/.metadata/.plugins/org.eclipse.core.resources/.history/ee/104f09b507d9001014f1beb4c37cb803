package com.example.demo.config;

import com.example.demo.bean.User;
import com.example.demo.dao.UserRepository;
import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.crypto.password.PasswordEncoder;

import java.util.Arrays;
import java.util.List;

@Configuration
public class DataSeeder {

    @Bean
    CommandLineRunner initDatabase(UserRepository repo, PasswordEncoder passwordEncoder) {
        return args -> {
            // --- 1. SYSTEM ADMIN ---
            createUser(repo, passwordEncoder, "Super Admin", "admin@insure.com", "9999999000", "ADMIN");

            // --- 2. INSURANCE PROVIDERS (3 Companies) ---
            createUser(repo, passwordEncoder, "LIC Insurance Manager", "provider@lic.com", "9999999101", "PROVIDER");
            createUser(repo, passwordEncoder, "Bajaj Allianz Manager", "provider@bajaj.com", "9999999102", "PROVIDER");
            createUser(repo, passwordEncoder, "Star Health Manager", "provider@star.com", "9999999103", "PROVIDER");

            // --- 3. DOCTORS (6 Specialists) ---
            List<User> doctors = Arrays.asList(
                new User("Dr. Sarah Smith (Cardiology)", "sarah@hospital.com", "9999999201", "DOCTOR"),
                new User("Dr. Gregory House (Diagnostics)", "house@hospital.com", "9999999202", "DOCTOR"),
                new User("Dr. Meredith Grey (General Surgery)", "grey@hospital.com", "9999999203", "DOCTOR"),
                new User("Dr. Derek Shepherd (Neurology)", "derek@hospital.com", "9999999204", "DOCTOR"),
                new User("Dr. Strange (Surgeon)", "strange@hospital.com", "9999999205", "DOCTOR"),
                new User("Dr. John Watson (General)", "watson@hospital.com", "9999999206", "DOCTOR")
            );

            for (User doc : doctors) {
                createUser(repo, passwordEncoder, doc.getName(), doc.getEmail(), doc.getPhoneNumber(), "DOCTOR");
            }
        };
    }

    // --- HELPER FUNCTION TO CREATE USERS ---
    private void createUser(UserRepository repo, PasswordEncoder encoder, String name, String email, String phone, String role) {
        if (!repo.existsByEmail(email)) {
            User user = new User();
            user.setName(name);
            user.setEmail(email);
            user.setPhoneNumber(phone);
            user.setPassword(encoder.encode("pass123")); // Default password for everyone
            user.setRole(role);
            user.setEmailVerified(true);
            user.setPhoneVerified(true);
            repo.save(user);
            System.out.println("âœ… Created " + role + ": " + name + " (" + email + ")");
        }
    }
}