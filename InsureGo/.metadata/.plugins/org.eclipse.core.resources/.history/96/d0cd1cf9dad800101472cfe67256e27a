server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true # Automatically creates routes based on service names
          lower-case-service-id: true
      routes:
        - id: auth-service
          uri: lb://AUTH-SERVICE
          predicates:
            - Path=/api/auth/**
        - id: policy-service
          uri: lb://POLICY-SERVICE
          predicates:
            - Path=/api/policies/**
        - id: claim-service
          uri: lb://CLAIM-SERVICE
          predicates:
            - Path=/api/claims/**
            
eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/